

<h2><%=@tweet.content%></h2>

<%if @tweet.user == Helpers.current_user(session)%>
  <h4><a href="/tweets/<%=@tweet.id%>/edit">Edit</a></h4>
  <form action="/tweets/<%=@tweet.id%>/delete" method="post">
    <input type="hidden" id="hidden" name="_method" value="DELETE">
    <input type="submit" id="submit" value="Delete Tweet">
  </form>
<%end%>
